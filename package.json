{
  "name": "kaczmarek.ai-dev",
  "version": "0.1.0",
  "description": "Local-first AI development helper CLI for any repository.",
  "bin": {
    "kad": "./bin/kad.js",
    "kat": "./bin/kad.js"
  },
  "scripts": {
    "test": "NODE_PATH=./node_modules jest",
    "test:watch": "NODE_PATH=./node_modules jest --watch",
    "test:coverage": "NODE_PATH=./node_modules jest --coverage",
    "test:ui": "NODE_PATH=./node_modules jest frontend/__tests__/planning-agent-status-rendering.test.js",
    "test:ui:watch": "NODE_PATH=./node_modules jest --watch frontend/__tests__/planning-agent-status-rendering.test.js",
    "test:all": "npm run test && npm run test:e2e",
    "test:all:ci": "npm run test:ci && npm run test:e2e -- --reporter=list",
    "test:ci": "NODE_PATH=./node_modules jest --ci --maxWorkers=2",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "api": "node bin/kad.js api start",
    "dev": "node bin/kad.js api start 3100",
    "test:cloud-agent": "node bin/test-cloud-agent.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "keywords": [
    "ai",
    "developer-tools",
    "cli",
    "local-first"
  ],
  "author": "kaczmarek",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "js-yaml": "^4.1.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": ["**/__tests__/**/*.test.js", "**/*.test.js"],
    "collectCoverageFrom": [
      "lib/**/*.js",
      "frontend/**/*.js",
      "!**/node_modules/**"
    ],
    "moduleFileExtensions": ["js", "json"],
    "testPathIgnorePatterns": ["/node_modules/", "/.kaczmarek-ai/"]
  }
}


